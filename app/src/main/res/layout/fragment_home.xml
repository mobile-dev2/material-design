<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                android:id="@+id/txtEmp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa "
                android:textSize="20sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/pesitos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 88.88"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/txtValor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                android:text="Valor +/-"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/pesitos"/>

            <TextView
                android:id="@+id/txtEmp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresa2 "
                android:textSize="20sp"
                android:layout_below="@+id/txtEmp1"
                android:layout_marginTop="50dp"
                tools:ignore="UnknownId" />


            <TextView
                android:id="@+id/pesitos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 90.88"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txtValor1"
                />

            <TextView
                android:id="@+id/txtValor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4CAF50"
                android:text="Valor +/-"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/pesitos2"/>

        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>